@model ShopCar_pok.Models.SalesOrderDetail

@{
    ViewData["Title"] = "ProductDetailEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductDetailEdit</h1>

<h4>SalesOrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="ProductDetailEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalesOrderId" class="control-label"></label>
                <p><b>@Html.DisplayFor(m =>m.SalesOrderId)</b></p>
            </div>
            <div class="form-group">
                <label asp-for="SalesOrderDetailId" class="control-label"></label>
                <p><b>@Html.DisplayFor(m => m.SalesOrderDetailId)</b></p>
            </div>
